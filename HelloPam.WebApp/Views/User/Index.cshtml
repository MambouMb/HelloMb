@model IEnumerable<HelloPam.WebApp.Models.UserModel>
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">User list</h1>
</div>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Picture</th>
                <th scope="col">Username</th>
                <th scope="col">Fullname</th>
                <th scope="col">Profile</th>
                <th scope="col">Created at</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td><img src="@user.Picture" class="img-fluid" style="width:50px" /></td>
                        <td>@user.Username</td>
                        <td>@user.Fullname</td>
                        <td>@user.Profile</td>
                        <td>@user.CreatedAt</td>
                        <td>@user.StatusName</td>
                        <td>@Html.ActionLink("Edit", "Edit", "User", new { id = user.Id }, null)</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" style="text-align:center; font-style:italic">Data not found !</td>
                </tr>
            }
        </tbody>
    </table>
</div>
